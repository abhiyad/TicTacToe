printgame f n i = do
      print (f !! i)
      if(i<n-1) then printgame f n (i+1)
      else print "-----------------------"
      
input state n= do
    str2<-getLine
    let i=read str2::Int
    str3<-getLine
    let j=read str3::Int
    game state i j 1 n


game state i j c n= do
    let row=state !! i
    let p1=take j row
    let p2= drop (j+1) row
    let nrow=p1++[c `mod` 2]++p2
    let py1=take i state
    let py2=drop (i+1) state
    let f=py1++[nrow]++py2
    printgame f n 0
 --   if(checkwin) then display it
 --  else call input function
 

main = do
    print "please enter dimension of the Grid"
    str<-getLine
    let n = read str::Int
    let newl = (replicate n) ((replicate n) 0)
    input newl n
